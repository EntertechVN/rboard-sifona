extends layout

block content
  div#app
    p {{ message }}
    h1= title
    p Welcome to #{title}

    script.
        var app = new Vue({
            el: '#app',
            data: {
                message: 'Hello Vue!'
            }
        })

        var socket = io();
        socket.on('connection', function (data) {
            console.log('connected');
        });

        socket.on('disconnect', function (data) {
            console.log('disconnected');
        });